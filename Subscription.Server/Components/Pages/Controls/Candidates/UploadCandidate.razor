<SfDialog CssClass="dialogPopup" Header="Edit Candidate" Height="98vh" IsModal="true" MinHeight="98vh" @ref="Dialog" Target="#divTarget" Visible="false" Width="60vw">
	<ChildContent>
		<SfSpinner @bind-Value="VisibleSpinner" CssClass="spinnerHeight" Type="SpinnerType.Fluent2" ZIndex="12000"/>
		<DialogPositionData X="right" Y="center"/>
		<DialogAnimationSettings Duration="1000" Effect="DialogEffect.SlideRight"/>
		@* <DialogEvents OnOpen="DialogOpen"/> *@
		<SfDataForm EditContext="Context" ID="candidateEditForm" OnValidSubmit="UploadCandidateResume" @ref="EditCandidateForm" ValidationDisplayMode="FormValidationDisplay.Inline">
			<FormButtons>
				<SfButton CssClass="e-secondary" IconCss="e-icons e-close" OnClick="CancelDialog" type="button">Cancel</SfButton>
				<SfButton CssClass="e-primary" IconCss="e-icons e-save" type="submit">Save Candidate</SfButton>
			</FormButtons>
			<FormValidator>
				<FluentValidationValidator/>@* Validator="_candidateDetailsValidator"*@
			</FormValidator>
			<FormItems>
			<FormGroup ColumnCount="3" ColumnSpacing="10px" CssClass="formGroup" ID="groupCandidateInfo" LabelText="Candidate Information">
					<FormItem ColumnSpan="1" Field="@nameof(Model.Files)">
						<Template>
							<SfUploader AllowedExtensions=".pdf,.docx,.doc,.rtf,.xps,.txt,.xlsx,.xls" AllowMultiple="false" AutoUpload="true" ID="uploadDoc" MaxFileSize="10485760"
							            SequentialUpload="true" ShowFileList="true">
								<UploaderEvents OnRemove="OnFileRemoved" FileSelected="OnFileSelected" ValueChange="UploadDocument"/> @*MaxFileSize = 10MB*@
							</SfUploader>
						</Template>
					</FormItem>
				</FormGroup>
			</FormItems>
		</SfDataForm>
	</ChildContent>
</SfDialog>
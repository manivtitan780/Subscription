<SfDialog AllowPrerender="true" CloseOnEscape="false" ID="dialogPdf" IsModal="true" MinHeight="85vh" @ref="Dialog" ShowCloseIcon="true" style="height: 85vh;" Target="#divTarget" Visible="false" Width="75vw">
	<DialogTemplates>
		<Header>@($"Document: {DocumentName} ({DocumentLocation})")</Header>
		<Content>
			<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000"/>
			<SfPdfViewer2 DownloadFileName="@DownloadFileName" EnableErrorDialog="false" Height="calc(85vh - 85px)" @ref="PdfViewer">
				<PdfViewerToolbarSettings ToolbarItems="_toolbarItems" ShowTooltip="false"></PdfViewerToolbarSettings>
			</SfPdfViewer2>
		</Content>
	</DialogTemplates>
	<DialogPositionData X="center" Y="center"/>
	<DialogAnimationSettings Duration="500" Effect="DialogEffect.Fade"/>
	<DialogEvents OnOverlayModalClick="OverlayClick" Opened="OpenDialog" Closed="CloseDialog" />
</SfDialog>
<SfDialog AllowPrerender="true" CloseOnEscape="false" ID="dialogPdf" IsModal="true" MinHeight="90vh" @ref="Dialog" ShowCloseIcon="true" style="height: 90vh;" Target="#divTarget" Visible="false" Width="85vw">
	<DialogPositionData X="center" Y="center"/>
	<DialogAnimationSettings Duration="500" Effect="DialogEffect.Fade"/>
	<DialogEvents OnOverlayModalClick="OverlayClick" Opened="OpenDialog" Closed="CloseDialog"/>
	<DialogTemplates>
		<Header>@($"Document: {DocumentName} ({DocumentLocation})")</Header>
		<Content>
			<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fluent2" ZIndex="12000"/>
			<SfPdfViewer2 DownloadFileName="@DownloadFileName" EnableErrorDialog="false" Height="calc(90vh - 85px)" @ref="PdfViewer">
				<PdfViewerToolbarSettings ToolbarItems="_toolbarItems" ShowTooltip="false"></PdfViewerToolbarSettings>
			</SfPdfViewer2>
		</Content>
	</DialogTemplates>
</SfDialog>
<SfDialog CssClass="dialogPopup" Header="@HeaderString" Height="362px" IsModal="true" MinHeight="300px" @ref="Dialog" Target="#divTarget" Visible="false" Width="520px">
    <ChildContent>
        <SfSpinner @bind-Visible="@VisibleSpinner" CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fluent2" ZIndex="12000"/>
        <DialogPositionData X="right" Y="center"></DialogPositionData>
        <DialogAnimationSettings Effect="DialogEffect.SlideRight"/>
        <DialogEvents OnOpen="OpenDialog"></DialogEvents>
        <SfDataForm EditContext="Context" ID="StateEditForm" OnValidSubmit="SaveState" @ref="EditStateForm" ValidationDisplayMode="FormValidationDisplay.Inline">
            <FormButtons>
                <SfButton CssClass="e-secondary" IconCss="e-icons e-close" OnClick="CancelState" type="button">Cancel</SfButton>
                <SfButton CssClass="e-primary" IconCss="e-icons e-save" type="submit">Save State</SfButton>
            </FormButtons>
            <FormValidator>
                <FluentValidationValidator Validator="_stateValidator"/>
            </FormValidator>
            <FormItems>
                <FormGroup ColumnCount="3" ColumnSpacing="10px" CssClass="formGroup" ID="groupInfo" LabelText="State Information">
                    <FormItem ColumnSpan="2" Field="@nameof(Model.Code)">
                        <Template>
                            <TextBox @bind-Value="Model.Code" ID="textCode" MaxLength="2" Placeholder="Code" Readonly="@(Model.ID != 0)"/>
                        </Template>
                    </FormItem>
                    <FormItem ColumnSpan="3" Field="@nameof(Model.StateName)">
                        <Template>
                            <TextBox @bind-Value="Model.StateName" ID="textOption" MaxLength="50" Placeholder="State"/>
                        </Template>
                    </FormItem>
                </FormGroup>
            </FormItems>
        </SfDataForm>
    </ChildContent>
</SfDialog>
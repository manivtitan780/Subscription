<SfDialog CssClass="dialogPopup" Header="Edit Company" Height="98vh" IsModal="true" MinHeight="98vh" @ref="Dialog" Target="#divTarget" Visible="false" Width="640px">
	<ChildContent>
		<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000" />
		<DialogPositionData X="right" Y="center" />
		<DialogAnimationSettings Duration="500" Effect="DialogEffect.SlideRight" />
		<DialogEvents OnOpen="DialogOpen" />
		<SfDataForm EditContext="@Context" ID="companyEditForm" OnValidSubmit="SaveCompany" @ref="CompanyEditForm" ValidationDisplayMode="FormValidationDisplay.Tooltip">
			<FormButtons>
				<SfButton CssClass="e-primary" type="submit">Save Company</SfButton>
				<SfButton CssClass="e-secondary" OnClick="CancelForm" type="button">Cancel</SfButton>
			</FormButtons>
			<FormValidator>
				<FluentValidationValidator Validator="_companyValidator" />
			</FormValidator>
			<FormItems>
				<FormGroup CssClass="formGroup" ID="groupInfo" LabelText="Company Information">
					<FormItem EditorType="FormEditorType.TextBox" Field="@nameof(Model.Name)" LabelText="Company Name:" Placeholder="Company Name" />
					<FormItem Field="@nameof(Model.EIN)" ID="EIN">
						<Template>
							<label class="e-form-label" for="EIN">EIN Number:</label>
							<SfMaskedTextBox @bind-Value="Model.EIN" ID="EIN" Mask="00-0000000" Placeholder="EIN Number" />
						</Template>
					</FormItem>
					<FormItem EditorType="FormEditorType.TextBox" Field="@nameof(Model.EmailAddress)" LabelText="Email Address:" Placeholder="Email Address" />
					<FormItem EditorType="FormEditorType.TextBox" Field="@nameof(Model.Website)" LabelText="Website Address:" Placeholder="Website Address" />
					<FormItem Field="@nameof(Model.DUNS)" ID="DUNS">
						<Template>
							<label class="e-form-label" for="DUNS">D-U-N-S Number:</label>
							<SfMaskedTextBox @bind-Value="Model.DUNS" ID="DUNS" Mask="00-000-0000" Placeholder="D-U-N-S Number" />
						</Template>
					</FormItem>
					<FormItem Field="@nameof(Model.NAICSCode)">
						<Template>
							<label class="e-form-label" for="dropNAICS">NAICS Code:</label>
							<SfDropDownList AllowFiltering="true" @bind-Value="Model.NAICSCode" DataSource="NAICS" ID="dropNAICS" TItem="IntValues" TValue="int">
								<DropDownListFieldSettings Text="Text" Value="Value"></DropDownListFieldSettings>
							</SfDropDownList>
						</Template>
					</FormItem>
					<FormItem EditorType="FormEditorType.TextArea" Field="@nameof(Model.Notes)" LabelText="Company Notes:" Placeholder="Company Notes" />
					<FormItem EditorType="FormEditorType.Switch" Field="@nameof(Model.Status)" LabelText="Enabled" />
				</FormGroup>
				<FormGroup ColumnCount="3" ColumnSpacing="10px" CssClass="formGroup formGroupSecond" ID="groupLocation" LabelText="Primary Location">
					<FormItem ColumnSpan="3" EditorType="FormEditorType.TextBox" Field="@nameof(Model.StreetName)" LabelText="Address:" />
					<FormItem ColumnSpan="3" EditorType="FormEditorType.TextBox" Field="@nameof(Model.City)" LabelText="City:" />
					<FormItem ColumnSpan="3" Field="@nameof(Model.StateID)">
						<Template>
							<label class="e-form-label">State:</label>
							<SfDropDownList @bind-Value="Model.StateID" DataSource="State" TItem="IntValues" TValue="int">
								<DropDownListFieldSettings Text="Text" Value="Value"></DropDownListFieldSettings>
							</SfDropDownList>
						</Template>
					</FormItem>
					<FormItem ColumnSpan="3" Field="@nameof(Model.ZipCode)">
						<Template>
							<label class="e-form-label" for="maskedZip">Zip Code:</label>
							<SfMaskedTextBox @bind-Value="Model.ZipCode" ID="maskedZip" Mask="00000" Placeholder="Zip Code" />
						</Template>
					</FormItem>
					<FormItem ColumnSpan="2" Field="@nameof(Model.Phone)">
						<Template>
							<label class="e-form-label" for="maskedPhone">Primary Phone Number:</label>
							<SfMaskedTextBox @bind-Value="Model.Phone" ID="maskedPhone" Mask="(000) 000-0000" Placeholder="Phone Number" />
						</Template>
					</FormItem>
					<FormItem ColumnSpan="1" Field="@nameof(Model.Extension)">
						<Template>
							<label class="e-form-label" for="maskedExt">Extension:</label>
							<SfMaskedTextBox @bind-Value="Model.Extension" ID="maskedExt" Mask="x0000" Placeholder="Extension" />
						</Template>
					</FormItem>
					<FormItem ColumnSpan="3" Field="@nameof(Model.Fax)">
						<Template>
							<label class="e-form-label" for="maskedFax">Fax:</label>
							<SfMaskedTextBox @bind-Value="Model.Fax" ID="maskedFax" Mask="(000) 000-0000" Placeholder="Fax" />
						</Template>
					</FormItem>
					<FormItem ColumnSpan="3" EditorType="FormEditorType.TextArea" Field="@nameof(Model.LocationNotes)" LabelText="Location Notes:" Placeholder="Location Notes" />
				</FormGroup>
			</FormItems>
		</SfDataForm>
	</ChildContent>
</SfDialog>